# Default: commit LF, checkout LF
* text=auto eol=lf

# Windows-only files can keep CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Common text files (force LF)
*.js  text eol=lf
*.jsx text eol=lf
*.ts  text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md  text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh  text eol=lf
*.toml text eol=lf
*.sql text eol=lf
*.css text eol=lf
